@page "/dice-bear-avatar"

<PageTitle>DiceBear Avatar</PageTitle>

<h1>DiceBear Avatar</h1>
<p>
  These are avatars generated by a library called
  <a href="https://www.dicebear.com/"> DiceBear</a>.
</p>

<p>
  The complete list of available styles are documented in
  <a href="https://www.dicebear.com/styles/">here</a>.
</p>

<p>
  The official DiceBear playground is
  <a href="https://www.dicebear.com/playground/">here</a>.
</p>

<div style="display: grid; grid-template-columns: auto auto auto;">
  @foreach (var avatarStyle in _avatarStyles)
  {
    <DiceBearAvatar AvatarStyle=@avatarStyle DefaultSeed=@Seed Style=@Style />
  }
</div>

@code
{
  private const string Style = "padding: 10px; width: 100px; height: 100px";

  private const string Seed = "DiceBear Avatar";

  private IList<string> _avatarStyles = new List<string>()
  {
    "bigSmile",
    "avataaarsNeutral",
    "lorelei",
    "botttsNeutral",
    "icons",
    "initials",
    "identicon",
    "shapes",
    "rings",
  };
}
